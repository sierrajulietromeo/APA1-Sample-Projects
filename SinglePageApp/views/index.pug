doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Recipe - #{recipe.name}
    link(rel="stylesheet", href="/styles.css")

  body
    .container
      h1= recipe.name
      
      .recipe
        section
          h2 Ingredients
          ul
            each ingredient in recipe.ingredients
              li= ingredient

        section
          h2 Instructions
          ol
            each instruction in recipe.instructions
              li= instruction